		}
        % \put(285,-118){\includegraphics[width=140pt]{assets/template/tagline}}
	\end{picture}
}

% progress bar at the bottom with page number
\defbeamertemplate{footline}{progress bar}{
	\dimen0=\paperwidth
    \divide\dimen0 by \inserttotalframenumber
	\multiply\dimen0 by \insertframenumber
	\edef\progressbarwidth{\the\dimen0}
	\leavevmode%
	\ifnum\theframenumber=1
	\else
		% Page number in the bottom right corner
		\hbox{%
			\begin{beamercolorbox}[wd=\paperwidth,ht=4ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm plus1fil]{footline}
				\usebeamerfont{footline}%
				\hfill\textcolor{ustblue}{\insertframenumber/\inserttotalframenumber}
				\vspace{1pt}
			\end{beamercolorbox}%
		}%
		\vskip0pt%
		\begin{beamercolorbox}[wd=\paperwidth,ht=2pt,dp=1pt]{progress bar}
			\begin{beamercolorbox}[wd=\progressbarwidth,ht=2pt,dp=1pt]{progress bar progress}
			\end{beamercolorbox}%
		\end{beamercolorbox}%
	\fi
}

\setbeamertemplate{footline}[progress bar]

% last frame
\newcommand{\backmatter}{
    \begingroup
    \setbeamertemplate{headline}{}
    \setbeamertemplate{footline}{}

    \setbeamercolor{background canvas}{bg=ustblue}

    \begin{frame}[c]{}
        \centering
		\vspace{10pt}
		\includegraphics[width=0.6\paperwidth]{assets/template/logo-last-page.pdf}
		\vspace{30pt}
		\par
		\Large{\color{white}{Thank you for your attention!}}
    \end{frame}
    \endgroup
}

